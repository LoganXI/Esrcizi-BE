@{
    ViewData["Title"] = "Anagrafiche";
}

@model IEnumerable<TestS4L5BEAppPolizia.Models.Anagrafica>

<h2>Anagrafiche</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Aggiungi Anagrafica</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.Indirizzo</td>
                <td>@item.Citta</td>
                <td>@item.CAP</td>
                <td>@item.Cod_Fisc</td>
            </tr>
        }
    </tbody>
</table>
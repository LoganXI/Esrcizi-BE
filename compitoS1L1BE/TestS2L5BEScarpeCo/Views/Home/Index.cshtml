@model IEnumerable<Articolo>

@{
    ViewData["Title"] = "Articoli in Vendita";
}

<h1>Articoli in Vendita</h1>

<p>
    <a asp-controller="Home" asp-action="Aggiungi" class="btn btn-primary">Aggiungi Nuovo Articolo</a>
</p>

<div class="row">
    @foreach (var articolo in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@articolo.CopertinaImg" class="card-img-top" alt="@articolo.Nome">
                <div class="card-body">
                    <h5 class="card-title">@articolo.Nome</h5>
                    <p class="card-text">@articolo.Prezzo.ToString("C")</p>
                    <a href="@Url.Action("Dettagli", "Home", new { id = articolo.Id })" class="btn btn-primary">Dettagli</a>
                </div>
            </div>
        </div>
    }
</div>
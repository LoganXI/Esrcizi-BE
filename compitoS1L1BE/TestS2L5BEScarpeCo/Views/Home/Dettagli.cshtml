@model Articolo

@{
    ViewData["Title"] = Model.Nome;
}


<div class="container mt-5">
    <h1 class="mb-4">@Model.Nome</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.CopertinaImg" class="img-fluid mb-3" alt="@Model.Nome">
            <div class="row">
                <div class="col">
                    <img src="@Model.ImgPlus" class="img-fluid" alt="@Model.Nome">
                </div>
                <div class="col">
                    <img src="@Model.ImgPlusPlus" class="img-fluid" alt="@Model.Nome">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Prezzo: @Model.Prezzo.ToString("C")</h3>
            <p>@Model.Descrizione</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Indietro</a>
        </div>
    </div>
</div>